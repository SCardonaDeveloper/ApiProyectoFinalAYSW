@page "/metaestrategica"

@using FrontendBlazorApi.Models
@using FrontendBlazorApi.Apis
@inject ApiMetaEstrategica Api
@inject IJSRuntime JS

<h3 class="text-center mb-4">Gesti√≥n de Metas Estrat√©gicas</h3>

@if (metas == null)
{
    <p><em>Cargando informaci√≥n...</em></p>
}
else
{
    <button class="btn btn-primary mb-3" @onclick="NuevaMeta">‚ûï Nueva Meta</button>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripci√≥n</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var meta in metas)
            {
                <tr>
                    <td>@meta.IdMetaEstrategica</td>
                    <td>@meta.Nombre</td>
                    <td>@meta.Descripcion</td>
                    <td>
                        <button class="btn btn-sm btn-warning me-2" @onclick="() => EditarMeta(meta)">‚úèÔ∏è Editar</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => EliminarMeta(meta.IdMetaEstrategica)">üóëÔ∏è Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (editarMeta != null)
{
    <div class="card mt-4">
        <div class="card-header bg-secondary text-white">
            @(esNuevo ? "Agregar Meta Estrat√©gica" : "Editar Meta Estrat√©gica")
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input class="form-control" @bind="editarMeta.Nombre" />
            </div>

            <div class="mb-3">
                <label class="form-label">Descripci√≥n</label>
                <textarea class="form-control" @bind="editarMeta.Descripcion"></textarea>
            </div>

            <button class="btn btn-success me-2" @onclick="GuardarMeta">üíæ Guardar</button>
            <button class="btn btn-secondary" @onclick="CancelarEdicion">‚ùå Cancelar</button>
        </div>
    </div>
}

@code {
    private List<MetaEstrategica>? metas;
    private MetaEstrategica? editarMeta;
    private bool esNuevo = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarMetas();
    }

    private async Task CargarMetas()
    {
        metas = await Api.GetAllAsync();
    }

    private void NuevaMeta()
    {
        editarMeta = new MetaEstrategica();
        esNuevo = true;
    }

    private void EditarMeta(MetaEstrategica meta)
    {
        editarMeta = new MetaEstrategica
        {
            IdMetaEstrategica = meta.IdMetaEstrategica,
            Nombre = meta.Nombre,
            Descripcion = meta.Descripcion
        };
        esNuevo = false;
    }

    private async Task GuardarMeta()
    {
        bool exito;
        if (esNuevo)
            exito = await Api.CreateAsync(editarMeta!);
        else
            exito = await Api.UpdateAsync(editarMeta!.IdMetaEstrategica, editarMeta);

        if (exito)
        {
            await JS.InvokeVoidAsync("alert", "‚úÖ Operaci√≥n exitosa.");
            editarMeta = null;
            await CargarMetas();
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "‚ùå Ocurri√≥ un error al guardar.");
        }
    }

    private async Task EliminarMeta(int id)
    {
        bool confirmado = await JS.InvokeAsync<bool>("confirm", "¬øSeguro que deseas eliminar esta meta?");
        if (confirmado)
        {
            var exito = await Api.DeleteAsync(id);
            if (exito)
            {
                await JS.InvokeVoidAsync("alert", "‚úÖ Meta eliminada correctamente.");
                await CargarMetas();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "‚ùå Error al eliminar.");
            }
        }
    }

    private void CancelarEdicion()
    {
        editarMeta = null;
    }
}
